            <Button Grid.Row="3" Content="Добавить новую выплату" FontSize="16"
                    Style="{StaticResource BtnBlueStyle}" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                    Width="220" Height="30" Margin="15" Click="SaveDataBtn_click"/>
        </Grid>
    </Border>
</Window>
